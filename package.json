{
  "name": "safe-travels",
  "version": "2.0.0",
  "description": "MERN App that advises user on travel status and COVID case numbers of each country with a discussion feature.",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "seed": "node scripts/seedDB.js",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dchiev/traveling-covid-app"
  },
  "keywords": [
    "mern-auth",
    "mern-jwt-auth",
    "mern-auth-jwt"
  ],
  "author": "Group 8",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dchiev/traveling-covid-app"
  },
  "homepage": "https://github.com/dchiev/traveling-covid-app",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "concurrently": "^5.2.0",
    "express": "^4.17.1",
    "if-env": "^1.0.4",
    "is-empty": "^1.2.0",
    "jsonwebtoken": "^8.5.1",
    "materialize-css": "^1.0.0-rc.2",
    "mongoose": "^5.9.10",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "react-materialize": "^3.9.6",
    "validator": "^13.0.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.3"
  }
}
